<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.xxljlxx.xyOA.domain.Role" table="xyoa_role">
		<id name="id">
		<generator class="native"></generator>
		</id>
		<property name="name" length="32"/>
		<property name="description" length="128"/>
	<!-- 配置岗位和用户的多对多关系 -->
	<set name="users" table="xyoa_user_role">
		<!-- 当前对象在关系表中的外键 -->
		<key column="roleid"></key>
		<many-to-many class="cn.xxljlxx.xyOA.domain.User" column="userid"/>
	</set>
	</class>
	
</hibernate-mapping>