<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.xxljlxx.xyOA.domain.User" table="xyoa_user">
		<id name="id">
		<generator class="native"></generator>
		</id>
		<property name="name" length="32"/>
		<property name="loginName" length="32"/>
		<property name="passWord" length="16"/>
		<property name="gender"/>
		<property name="email" length="32"/>
		<property name="phone" length="16"/>
		<property name="description" length="128"/>
	<!-- 配置子用户和部门的多对一关系 -->
	<many-to-one name="department" class="cn.xxljlxx.xyOA.domain.Department" column="parentid"/>
	<!-- 配置用户和岗位多对多关系 -->
		<set name="roles" table="xyoa_user_role" >
		<key column="userid"></key>
		<many-to-many class="cn.xxljlxx.xyOA.domain.Role" column="roleid"/>
		</set>
	</class>
	
</hibernate-mapping>